    <style>
        </style>
        <script>
        'use strict'    

        function getPal(number) {

            let reversed;
            let i = 0;

            while(number !== (reversed = getReversed(numToArray(number)))) {
                number += reversed;
            }
            return number
        }

        function numToArray(num) {

            let arr =[];

            while (num > 10) {

                let rem = num % 10
                arr.unshift(rem);
                num -= rem;
                num /= 10;
            }
            arr.unshift(num);
            return arr
        }

        function getReversed(arr) {
            
            let next = arr[arr.length - 2];
            let num = arr[arr.length - 1] * 10 + next;
            for (let i = arr.length - 3; i > -1; i--) {

                num *= 10;
                num +=arr[i]
            }

            return num;

        }

        </script>
